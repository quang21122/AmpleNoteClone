<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/darkBackground</item>
        <item name="android:navigationBarColor">@color/darkBackground</item>
        <item name="android:windowBackground">@color/darkBackground</item>
    </style>

    <style name="CalendarHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupElevation">8dp</item>
        <item name="android:dropDownVerticalOffset">24dp</item>
    </style>

    <style name="PopupMenuStyle.MenuItem" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuStyle.MenuItem</item>
    </style>

    <!-- BottomSheetDialog theme -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <!-- Custom BottomSheet style -->
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>