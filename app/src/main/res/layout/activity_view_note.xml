<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Note Title -->
        <EditText
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="untitled note"
            android:textColorHint="#777777"
            android:textColor="#AAAAAA"
            android:textSize="24sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"/>

        <!-- Last Updated Text -->
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updated 1 second ago"
            android:textColor="#777777"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"/>

        <!-- Tag Section -->
        <TextView
            android:id="@+id/add_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add a tag"
            android:textColor="#777777"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:drawableStart="@drawable/ic_tag"
            android:drawablePadding="8dp"/>

        <!-- Note Content -->
        <EditText
            android:id="@+id/note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Feedback recordings into an acoustic situation"
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            android:gravity="top"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:minHeight="200dp"/>

        <!-- Status Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Hidden Tab -->
            <TextView
                android:id="@+id/tab_hidden"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hidden"
                android:textColor="#777777"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawableStart="@drawable/ic_hidden"
                android:drawablePadding="4dp"/>

            <!-- Completed Tab -->
            <TextView
                android:id="@+id/tab_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Completed"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="4dp"/>

            <!-- Backlinks Tab -->
            <TextView
                android:id="@+id/tab_backlinks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Backlinks"
                android:textColor="#777777"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:drawableStart="@drawable/ic_backlinks"
                android:drawablePadding="4dp"/>
        </LinearLayout>

        <!-- No Completed Tasks Message -->
        <TextView
            android:id="@+id/no_completed_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have no completed tasks."
            android:textColor="#777777"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"/>
    </LinearLayout>
</ScrollView>