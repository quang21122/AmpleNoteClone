<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Note Title -->
        <EditText
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="untitled note"
            android:textColorHint="#777777"
            android:textColor="#AAAAAA"
            android:textSize="24sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp" />

        <!-- Last Updated Text -->
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updated 1 second ago"
            android:textColor="#777777"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp" />

        <!-- Tag Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Note Content -->
        <EditText
            android:id="@+id/note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=""
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            android:gravity="top"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:minHeight="200dp" />

        <!-- Tasks Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tasks_recycler_view"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

        <!-- Status Tabs -->
        <LinearLayout
            android:id="@+id/status_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- Hidden Tab -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/tab_icon_hidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hidden" />

                <TextView
                    android:id="@+id/tab_hidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hidden"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Completed Tab -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/tab_icon_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check" />

                <TextView
                    android:id="@+id/tab_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Backlinks Tab -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/tab_icon_backlinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_backlinks" />

                <TextView
                    android:id="@+id/tab_backlinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backlinks"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>


        <!-- No Completed Tasks Message -->
        <TextView
            android:id="@+id/no_completed_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have no completed tasks."
            android:textColor="#777777"
            android:textSize="16sp"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp" />
    </LinearLayout>
</ScrollView>