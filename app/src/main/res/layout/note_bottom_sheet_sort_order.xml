<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/sortByDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_option_date_created"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/sortByLastUpdated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_option_last_updated"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/sortByTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort_option_title_a_z"
        android:padding="12dp"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Add more sort options here -->
</LinearLayout>
