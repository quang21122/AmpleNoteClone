<?xml version="1.0" encoding="utf-8"?><!-- Task -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue_gray">

        <!-- Priority Bar -->
        <View
            android:id="@+id/task_priority_bar"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/task_title"
            android:layout_alignBottom="@id/task_created_at_time_ago"
            android:background="@android:color/holo_red_light" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/check_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp" />

        <!-- Task Title -->
        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/check_task"
            android:layout_toStartOf="@id/expand_button"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp"
            android:paddingTop="12dp"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/task_title"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- Note Title 1 -->
        <TextView
            android:id="@+id/note_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_title"
            android:layout_toEndOf="@id/check_task"
            android:layout_marginStart="8dp"
            android:text="@string/note_s_name"
            android:textSize="14sp"
            android:textColor="@color/textBlue"
            android:paddingVertical="4dp" />

        <!-- Task Created Time Ago-->
        <TextView
            android:id="@+id/task_created_at_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/note_title1"
            android:layout_toEndOf="@id/check_task"
            android:layout_marginStart="8dp"
            android:text="@string/created_23_minutes_ago"
            android:textSize="12sp"
            android:textColor="@color/textGray"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Expand Button -->
        <ImageView
            android:id="@+id/expand_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_expanded"
            android:contentDescription="Expand/Collapse" />

    </RelativeLayout>

        <!-- Expandable Layout -->
        <LinearLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_blue_gray">
<!--            android:visibility="gone">-->

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false">

                    <!-- REPEAT Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="20dp">

                        <!-- Repeat Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_repeat"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/repeat_icon" />

                        <!-- Block REPEAT Card with Border and Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Main REPEAT Card -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_card"
                                android:elevation="2dp"
                                android:padding="12dp"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/repeat_card">

                                <!-- REPEAT Title -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/repeat"
                                    android:textSize="16sp"
                                    android:textColor="@color/textGray"
                                    android:layout_marginBottom="4dp" />

                                <!-- REPEAT Content with Dropdown Icon -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/repeat_option_text"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Doesn't repeat"
                                        android:textSize="16sp"
                                        android:textColor="@color/black" />

                                    <!-- Dropdown Icon on the Far Right -->
                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_arrow_expanded"
                                        android:layout_gravity="center_vertical" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- START AT Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:paddingStart="20dp">

                        <!-- Calendar Icon -->
                        <ImageView
                            android:id="@+id/start_at_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="24dp"
                            android:src="@drawable/ic_calendar_start_at" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Main START AT Card -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_card"
                                android:elevation="2dp"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <!-- START AT Title in Gray -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="@string/start_at"
                                    android:textColor="@color/textGray"
                                    android:textSize="16sp" />

                                <!-- Content Section with Date, Divider, Morning, Time, and Clock Icon -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!-- Upper Section for Date in Orange -->
                                    <LinearLayout
                                        android:id="@+id/start_at_date_container"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/start_at_date_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <!-- Horizontal Divider in Gray, Spanning Full Card Width -->
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:background="@color/light_gray" />

                                    <!-- Lower Section for Morning, Time, and Clock Icon in Orange, Aligned Horizontally -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <!-- Morning Text in Orange on the Left -->
                                        <LinearLayout
                                            android:id="@+id/start_at_period_container"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/start_at_period_text"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:text=""
                                                android:textColor="@color/textRed"
                                                android:textSize="16sp" />
                                        </LinearLayout>

                                        <!-- Time and Clock Icon on the Right -->
                                        <LinearLayout
                                            android:id="@+id/start_at_time_container"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:gravity="end|center_vertical"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/start_at_time_text"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="8dp"
                                                android:text=""
                                                android:textColor="@color/textRed"
                                                android:textSize="16sp" />

                                            <ImageView
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_gravity="center_vertical"
                                                android:src="@drawable/ic_clock_start_at"
                                                app:tint="@color/black"
                                                android:id="@+id/start_at_clock_icon" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Start Noti Card -->
                    <LinearLayout
                        android:id="@+id/start_noti_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:paddingStart="20dp"
                        android:visibility="gone">

                        <!-- Repeat Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bell_start_noti"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/start_noti_icon" />

                        <!-- Main Start noti Card with Border and Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/start_noti_5min"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/_5_min"
                                android:textSize="14sp"
                                android:textColor="@color/textGray"
                                app:backgroundTint="?attr/colorPrimaryContainer"
                                app:cornerRadius="20dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/start_noti_15min"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/_15_min"
                                android:textSize="14sp"
                                android:textColor="@color/textGray"
                                app:backgroundTint="?attr/colorPrimaryContainer"
                                app:cornerRadius="20dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/start_noti_60min"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/_60_min"
                                android:textSize="14sp"
                                android:textColor="@color/textGray"
                                app:backgroundTint="?attr/colorPrimaryContainer"
                                app:cornerRadius="20dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/start_noti_1day"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/_1_day"
                                android:textSize="14sp"
                                android:textColor="@color/textGray"
                                app:backgroundTint="?attr/colorPrimaryContainer"
                                app:cornerRadius="20dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Hide until Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:paddingStart="20dp">

                        <!-- Eye-slash Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_visibility_off"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/hide_until_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Main HidE UNTIL Card with Border and Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:background="@drawable/border_card"
                                android:elevation="2dp"
                                android:padding="12dp"
                                android:orientation="vertical">

                                <!-- Content with date on left, divider, and time on right, spanning full height -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <!-- Left section (date) -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical"
                                        android:gravity="center_vertical"
                                        android:id="@+id/hide_until_date_container">

                                        <!-- Title "HidE UNTIL" in gray -->
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/hide_until"
                                            android:textSize="16sp"
                                            android:textColor="@color/textGray"
                                            android:layout_marginBottom="4dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textSize="15dp"
                                            android:textColor="@color/black"
                                            android:gravity="center_vertical"
                                            android:id="@+id/hide_until_date_text" />
                                    </LinearLayout>

                                    <!-- Vertical divider (middle, spanning full height) -->
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/light_gray"
                                        android:layout_marginHorizontal="8dp" />

                                    <!-- Right section (time) -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="bottom"
                                        android:layout_weight="1"
                                        android:id="@+id/hide_until_time_container">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textSize="15dp"
                                            android:textColor="@color/black"
                                            android:gravity="center_vertical"
                                            android:id="@+id/hide_until_time_text" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Priority Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:paddingStart="20dp"
                        android:visibility="visible">

                        <!-- Repeat Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star_priority"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/priority_icon" />

                        <!-- Main Priority Card with Border and Content -->
                        <LinearLayout
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/priority_important"
                                android:layout_width="60dp"
                                android:layout_height="48dp"
                                android:text="Important"
                                android:textSize="14sp"
                                android:textColor="@color/textGray"
                                app:backgroundTint="?attr/colorPrimaryContainer"
                                app:cornerRadius="20dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/priority_urgent"
                                android:layout_width="45dp"
                                android:layout_height="48dp"
                                android:text="Urgent"
                                android:textSize="14sp"
                                android:textColor="@color/textGray"
                                app:backgroundTint="?attr/colorPrimaryContainer"
                                app:cornerRadius="20dp"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:layout_marginEnd="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Duration Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:paddingStart="20dp">

                        <!-- Duration Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock_duration"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/duration_icon" />

                        <!-- Main Duration Card with Border and Content -->
                        <LinearLayout
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- First row: 15 min, 30 min, 60 min -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/duration_15min"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:text="@string/_15_min"
                                    android:textSize="14sp"
                                    android:textColor="@color/textGray"
                                    app:backgroundTint="?attr/colorPrimaryContainer"
                                    app:cornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:padding="4dp"
                                    android:layout_marginEnd="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/duration_30min"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:text="@string/_30_min"
                                    android:textSize="14sp"
                                    android:textColor="@color/textGray"
                                    app:backgroundTint="?attr/colorPrimaryContainer"
                                    app:cornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:padding="4dp"
                                    android:layout_marginEnd="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/duration_60min"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:text="@string/_60_min"
                                    android:textSize="14sp"
                                    android:textColor="@color/textGray"
                                    app:backgroundTint="?attr/colorPrimaryContainer"
                                    app:cornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:padding="4dp"
                                    android:layout_marginEnd="8dp" />
                            </LinearLayout>

                            <!-- Second row: Custom... -->
                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="4dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/duration_custom"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:text="@string/custom_with_dot"
                                    android:textSize="14sp"
                                    android:textColor="@color/textGray"
                                    app:backgroundTint="?attr/colorPrimaryContainer"
                                    app:cornerRadius="20dp"
                                    android:layout_weight="1"
                                    android:padding="4dp"
                                    android:layout_marginEnd="8dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <!-- Task Score -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Task Score 13.4"
                            android:textColor="@color/textBlue"
                            android:textSize="16sp"
                            android:id="@+id/task_score" />

                        <!-- Task created time ago -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - Created almost 5 years ago"
                            android:textColor="@color/textGray"
                            android:textSize="16sp"
                            android:id="@+id/task_created_time_ago" />
                    </LinearLayout>

                    <!-- Separator Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Options Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- DELETE Button -->
                        <TextView
                            android:id="@+id/delete_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/DELETE"
                            android:textColor="@color/textBlue"
                            android:textSize="14sp"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="@color/light_gray"
                            android:textSize="14sp"
                            android:id="@+id/separate_line1"/>

                        <!-- Icon (Bạn có thể thay bằng ImageView với drawable) -->
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_attach_note"
                            android:id="@+id/attach_note_icon"/>

                        <!-- Am... (Placeholder) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Note's Name"
                            android:textColor="@color/textBlue"
                            android:textSize="14sp"
                            android:padding="4dp"
                            android:id="@+id/note_title2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="@color/light_gray"
                            android:textSize="14sp"
                            android:id="@+id/separate_line2"/>

                        <!-- DONE Button -->
                        <TextView
                            android:id="@+id/text_done_undone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/DONE"
                            android:textColor="@color/textBlue"
                            android:textSize="14sp"
                            android:padding="4dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Shadow line -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
