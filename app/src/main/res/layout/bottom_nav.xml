<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bar_height"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="@dimen/nav_bar_padding"
    android:elevation="8dp"
    android:gravity="center"
    android:layout_gravity="bottom">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_jots"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_pencil"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/iconGray"
        android:contentDescription="Jots" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_notes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_note"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/iconGray"
        android:contentDescription="Notes" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_tasks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_task"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/iconGray"
        android:contentDescription="Tasks" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_calendar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_calendar_nav"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/iconGray"
        android:contentDescription="Calendar" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/nav_add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_add_nav"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/iconGray"
        android:contentDescription="Add" />

</LinearLayout>
