<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar view"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            app:tint="@color/black"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/super_light_gray"
        android:weightSum="4">

        <TextView
            android:id="@+id/tab_one_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="One Day"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tab_background_selector"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tab_three_days"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Three Days"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tab_background_selector"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tab_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Week"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tab_background_selector"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tab_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Month"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/tab_background_selector"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chevron_left"/>

            <TextView
                android:id="@+id/monthYearText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feb 2024"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chevron_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                style="@style/CalendarHeaderText"
                android:text="SUN"/>

            <TextView
                style="@style/CalendarHeaderText"
                android:text="MON"/>

            <TextView
                style="@style/CalendarHeaderText"
                android:text="TUE"/>

            <TextView
                style="@style/CalendarHeaderText"
                android:text="WED"/>

            <TextView
                style="@style/CalendarHeaderText"
                android:text="THU"/>

            <TextView
                style="@style/CalendarHeaderText"
                android:text="FRI"/>

            <TextView
                style="@style/CalendarHeaderText"
                android:text="SAT"/>
        </LinearLayout>

        <GridView
            android:id="@+id/calendarGrid"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:numColumns="7"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/goToTodayButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="GO TO TODAY"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:minWidth="120dp" />
</LinearLayout>