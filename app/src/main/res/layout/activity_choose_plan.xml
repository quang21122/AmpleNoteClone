<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back" />

            <!-- Settings Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/back_icon"
                android:text="Amplenote Plan"
                android:textColor="#333"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Plan Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icon và Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_merger_first_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pro Plan"
                        android:textColor="#212121"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_merger_second_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxWidth="300dp"
                    android:text="Level up your productivity"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_help_pages" />
        </LinearLayout>

        <!-- Features -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All the benefits of Personal plus:"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="8dp"
            android:text="• No nags or banners\n• Uploads greater than 5mb\n• Share tags with groups"
            android:textColor="#333"
            android:textSize="14sp" />

        <!-- Trial Offer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBlue"
            android:lineSpacingExtra="6dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="12dp"
            android:text="Try Amplenote Pro free for 2 weeks!"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBlue"
            android:lineSpacingExtra="6dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="12dp"
            android:text="Plans start at 41.583 đ/month after trial"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

