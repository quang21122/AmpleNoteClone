<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ScrollView cho nội dung có thể cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">

        <!-- Top Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkBackground"
            android:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@color/white"
            app:titleTextColor="@color/white"
            app:title="Tasks"/>

        <!-- Sort Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All tasks"
            android:textSize="16sp"
            android:textColor="@color/textGray"
            android:background="@android:color/white"
            android:padding="14dp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textGray"
            android:layout_marginBottom="24dp" />

        <!-- Chỗ để chứa TaskFragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/task_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.amplenoteclone.tasks.TaskFragment" />

    </LinearLayout>
</ScrollView>

    <!-- BottomNavigationView cố định ở dưới cùng -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/iconGray" />

</RelativeLayout>