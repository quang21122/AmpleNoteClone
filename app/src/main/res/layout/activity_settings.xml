<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <!-- Subscription Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subscription"
                android:textSize="16sp"
                android:textColor="#757575"
                android:background="@color/colorSectionBackground"
                android:padding="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_user"
                    android:layout_marginEnd="8dp"
                    app:tint="#616161" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_text"
                    android:textSize="16sp"
                    android:textColor="#212121"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_choose_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_a_plan"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/lightBlue"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/invite_friends_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_border">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_invite_people"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_friends_and_earn_credits"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Notifications Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/colorSectionBackground"
                android:padding="14dp"
                android:text="@string/notifications"
                android:textColor="#757575"
                android:textSize="16sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:layout_marginEnd="8dp"
                        app:tint="#616161" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/task_reminders"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"
                        android:textColor="#212121"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_notifications_when_tasks_are_due"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Appearance Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appearance"
                android:textSize="16sp"
                android:textColor="#757575"
                android:background="@color/colorSectionBackground"
                android:padding="14dp"/>

            <!-- First Day of Week Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:id="@+id/day_of_week_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginEnd="8dp"
                        app:tint="#616161"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_day_of_week"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_selected_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sunday"
                        android:layout_marginLeft="52dp"
                        android:textSize="16sp"
                        android:textColor="#212121"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginStart="8dp"
                        app:tint="#616161"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Default Note Width Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:id="@+id/note_width_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_menu_default"
                        android:layout_marginEnd="8dp"
                        app:tint="#616161"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_note_width"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_selected_note_width"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/standard_width"
                        android:layout_marginLeft="52dp"
                        android:textSize="16sp"
                        android:textColor="#212121"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginStart="8dp"
                        app:tint="#616161"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Task Completion Effect Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:id="@+id/task_completion_effect_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_effect"
                        android:layout_marginEnd="8dp"
                        app:tint="#616161"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_completion_effect"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_selected_task_completion_effect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dazzle"
                        android:layout_marginLeft="52dp"
                        android:textSize="16sp"
                        android:textColor="#212121"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginStart="8dp"
                        app:tint="#616161"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info"
                android:textSize="16sp"
                android:textColor="#757575"
                android:background="@color/colorSectionBackground"
                android:padding="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:layout_marginEnd="8dp"
                    app:tint="#616161" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/version_3_124_739"
                    android:layout_marginLeft="20dp"
                    android:textSize="16sp"
                    android:textColor="#212121"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer_reports"
                android:textSize="16sp"
                android:textColor="#757575"
                android:background="@color/colorSectionBackground"
                android:padding="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingVertical="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_border">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_debug"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_dubugging_report"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Icon và Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_merger"
                            android:layout_marginEnd="8dp"
                            app:tint="#616161" />

                        <TextView
                            android:id="@+id/tv_merger_first_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_merge_reports"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#212121"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_merger_second_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_a_report_to_developers_when_a_merge_occurs_in_a_non_vault_note"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:maxWidth="300dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Switch -->
                <Switch
                    android:id="@+id/switch_merge_reports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Icon và Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_stats"
                            android:layout_marginEnd="8dp"
                            app:tint="#616161" />

                        <TextView
                            android:id="@+id/tv_stats_first_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_usage_statistics"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#212121"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_stats_second_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_anonymous_usage_statistics_to_developers"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:maxWidth="300dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Switch -->
                <Switch
                    android:id="@+id/switch_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="12dp">

                <TextView
                    android:id="@+id/first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_bar_todo_added"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="52dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_item"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="#212121"/>

            </RelativeLayout>

            <!-- Danger Zone Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/danger_zone"
                android:textSize="16sp"
                android:textColor="#9c0e02"
                android:background="#f7d1cd"
                android:padding="14dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="14dp"
                android:layout_marginVertical="16dp">

                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:text="@string/delete_account"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#f74d3b"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_gravity="start"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"/>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:text="@string/cancel"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:backgroundTint="#f23841"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="start"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- TextView 1 -->
            <TextView
                android:id="@+id/tv_confirmation_message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/permanently_delete_your_amplenote_account_and_all_data_associated_with_it_this_cannot_be_undone"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="14dp"/>

            <!-- TextView 2 -->
            <TextView
                android:id="@+id/tv_confirmation_message_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_start_the_process_press_the_button_below_to_send_a_confirmation_code_to_the_email_address_associated_with_your_account"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"/>

            <!-- Button -->
            <Button
                android:id="@+id/btn_send_confirmation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_confirmation_code"
                android:textSize="16sp"
                android:visibility="gone"
                android:textAllCaps="false"
                android:backgroundTint="@color/lightBlue"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="14dp"/>

            <!-- EditText for confirmation code -->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="24dp"
                android:hint="@string/confirmation_code"
                app:boxStrokeColor="@color/lightBlue"
                app:hintTextColor="@color/lightBlue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirmation_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="#333"
                    android:textCursorDrawable="@null"
                    android:textColorHighlight="#333"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_confirm_account_deletion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_account_deletion"
                android:textSize="16sp"
                android:visibility="gone"
                android:textAllCaps="false"
                android:backgroundTint="#f23841"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="14dp"/>

        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>

